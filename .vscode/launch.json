  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/src/quarto.ts",
      "args": ["serve"],
      "cwd": "${workspaceFolder}/../quarto-demo",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--importmap=${workspaceFolder}/src/import_map.json",
        "--inspect-brk",
        "--allow-all"
      ],
      "env": {
        "QUARTO_BIN_PATH": "${workspaceFolder}/package/dist/bin",
        "QUARTO_SHARE_PATH": "${workspaceFolder}/src/resources"
      },
      "attachSimplePort": 9229
    },
    {
      "name": "test",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--unstable",
        "--importmap=${workspaceFolder}/src/import_map.json",
        "--inspect-brk",
        "--allow-all",
        "${file}"
      ],
      "env": {
        "QUARTO_BIN_PATH": "${workspaceFolder}/package/dist/bin",
        "QUARTO_SHARE_PATH": "${workspaceFolder}/src/resources"
      },
      "attachSimplePort": 9229
    }
  ]
}
